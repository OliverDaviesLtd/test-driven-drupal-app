<?php

declare(strict_types=1);

use Drupal\node\NodeInterface;

function tdd_sessions_preprocess_node(array &$variables): void {
  /** @var NodeInterface $node */
  $node = $variables['node'];

  if ($node->bundle() == 'session') {
    // Add the name of the speaker to the session content.
    $variables['content']['speaker']['#markup'] = $node->getOwner()->label();
  }
}
